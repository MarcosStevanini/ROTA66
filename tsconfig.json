{
  "extends": "expo/tsconfig.base",

  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react-native",
    "declaration": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // "paths": {
    //   "src/*": ["src/*"],
    //   "screens/*": ["src/screens/*"]
    // }
    // "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"],
}